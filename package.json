{
  "name": "kustodian",
  "version": "0.0.0",
  "private": true,
  "description": "A GitOps templating framework for Kubernetes with Flux CD",
  "type": "module",
  "workspaces": ["packages/*", "plugins/*"],
  "scripts": {
    "test": "bun run --filter '*' test",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=coverage",
    "test:e2e": "bun test e2e/",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "fmt": "biome format --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "rm -rf node_modules coverage **/dist **/*.tsbuildinfo"
  },
  "keywords": [
    "kubernetes",
    "gitops",
    "flux",
    "kustomize",
    "templating",
    "k0s",
    "cluster-management"
  ],
  "author": "Luca Silverentand <luca@onezero.company>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.9",
    "lefthook": "^2.0.15",
    "typescript": "^5.8.3"
  }
}
