{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kustodian.io/schemas/node.json",
  "$ref": "#/definitions/Node",
  "definitions": {
    "Node": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "const": "kustodian.io/v1"
        },
        "kind": {
          "type": "string",
          "const": "Node"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "cluster": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "name",
            "cluster"
          ],
          "additionalProperties": false
        },
        "spec": {
          "type": "object",
          "properties": {
            "role": {
              "type": "string",
              "enum": [
                "controller",
                "worker",
                "controller+worker"
              ]
            },
            "address": {
              "type": "string",
              "minLength": 1
            },
            "profile": {
              "type": "string",
              "minLength": 1
            },
            "ssh": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "key_path": {
                  "type": "string"
                },
                "known_hosts_path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer",
                  "exclusiveMinimum": 0
                }
              },
              "additionalProperties": false
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": [
                  "string",
                  "boolean",
                  "number"
                ]
              }
            },
            "taints": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1
                  },
                  "value": {
                    "type": "string"
                  },
                  "effect": {
                    "type": "string",
                    "enum": [
                      "NoSchedule",
                      "PreferNoSchedule",
                      "NoExecute"
                    ]
                  }
                },
                "required": [
                  "key",
                  "effect"
                ],
                "additionalProperties": false
              }
            },
            "annotations": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "role",
            "address"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "apiVersion",
        "kind",
        "metadata",
        "spec"
      ],
      "additionalProperties": false
    }
  },
  "description": "Kustodian Node resource schema (individual node definitions)"
}