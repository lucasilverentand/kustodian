{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kustodian.io/schemas/node-profile.json",
  "$ref": "#/definitions/NodeProfile",
  "definitions": {
    "NodeProfile": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "const": "kustodian.io/v1"
        },
        "kind": {
          "type": "string",
          "const": "NodeProfile"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["name"],
          "additionalProperties": false
        },
        "spec": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string"
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": ["string", "boolean", "number"]
              }
            },
            "taints": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1
                  },
                  "value": {
                    "type": "string"
                  },
                  "effect": {
                    "type": "string",
                    "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"]
                  }
                },
                "required": ["key", "effect"],
                "additionalProperties": false
              }
            },
            "annotations": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["apiVersion", "kind", "metadata", "spec"],
      "additionalProperties": false
    }
  },
  "description": "Kustodian NodeProfile resource schema"
}
