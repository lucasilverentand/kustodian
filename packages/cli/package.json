{
  "name": "@kustodian/cli",
  "version": "2.1.0",
  "description": "CLI framework with DI and middleware for Kustodian",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "kustodian": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun build src/bin.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun run tsc --noEmit"
  },
  "keywords": [
    "kustodian",
    "cli"
  ],
  "author": "Luca Silverentand <luca@onezero.company>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasilverentand/kustodian.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@kustodian/core": "workspace:*",
    "@kustodian/generator": "workspace:*",
    "@kustodian/loader": "workspace:*",
    "@kustodian/nodes": "workspace:*",
    "@kustodian/plugin-k0s": "workspace:*",
    "@kustodian/plugins": "workspace:*",
    "@kustodian/registry": "workspace:*",
    "@kustodian/schema": "workspace:*",
    "@kustodian/sources": "workspace:*",
    "ora": "^9.0.0",
    "yaml": "^2.8.2"
  }
}
